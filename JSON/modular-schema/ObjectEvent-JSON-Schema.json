{
    "$id": "https://jmcanterafonseca-iota.github.io/EPCIS/JSON/modular-schema/ObjectEvent-JSON-Schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "ObjectEvent": {
            "allOf": [
                {
                    "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/Event"
                },
                {
                    "type": "object",
                    "properties": {
                        "isA": {
                            "type": "string",
                            "enum": ["ObjectEvent"]
                        },
                        "epcList": {
                            "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/epcList"
                        },
                        "quantityList": {
                            "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/quantityList"
                        },
                        "action": {
                            "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/action"
                        },
                        "bizStep": {
                            "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/uri"
                        },
                        "disposition": {
                            "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/uri"
                        },
                        "persistentDisposition": {
                            "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/persistentDisposition"
                        },
                        "readPoint": {
                            "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/readPoint"
                        },
                        "bizLocation": {
                            "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/bizLocation"
                        },
                        "bizTransactionList": {
                            "type": "array",
                            "items": {
                                "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/bizTransaction"
                            }
                        },
                        "sourceList": {
                            "type": "array",
                            "items": {
                                "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/source"
                            }
                        },
                        "destinationList": {
                            "type": "array",
                            "items": {
                                "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/destination"
                            }
                        },
                        "sensorElementList": {
                            "type": "array",
                            "items": {
                                "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/sensorElement"
                            }
                        },
                        "ilmd": {
                            "$ref": "EPCIS-Event-JSON-Schema.json#/definitions/ilmd"
                        }
                    },
                    "required": [
                        "isA",
                        "action"
                    ]
                },
                {
                    "anyOf": [
                        {
                            "properties": {
                                "epcList": {
                                    "minItems": 0
                                }
                            },
                            "required": [
                                "epcList"
                            ]
                        },
                        {
                            "properties": {
                                "quantityList": {
                                    "minItems": 1
                                }
                            },
                            "required": [
                                "quantityList"
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "properties": {
                                        "sensorElementList": {
                                            "minItems": 1
                                        }
                                    },
                                    "required": [
                                        "sensorElementList"
                                    ]
                                },
                                {
                                    "properties": {
                                        "readPoint": {
                                            "minItems": 1
                                        }
                                    },
                                    "required": [
                                        "readPoint"
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "anyOf": [
                        {
                            "properties": {
                                "ilmd": {
                                    "not": {}
                                },
                                "action": {
                                    "pattern": "^OBSERVE$"
                                }
                            }
                        },
                        {
                            "properties": {
                                "ilmd": {
                                    "not": {}
                                },
                                "action": {
                                    "pattern": "^DELETE$"
                                }
                            }
                        },
                        {
                            "properties": {
                                "action": {
                                    "pattern": "^ADD$"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#definitions/ObjectEvent"
        }
    ]
}
