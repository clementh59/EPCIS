{
    "$id": "https://jmcanterafonseca-iota.github.io/EPCIS/JSON/modular-schema/schemas/AssociationEvent-JSON-Schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "AssociationEvent": {
            "allOf": [{
                "$ref": "definitions-JSON-Schema.json#/definitions/Event"
            },
            {
                "type": "object",
                "properties": {
                    "isA": {
                        "type": "string",
                        "enum": ["AssociationEvent"]
                    },
                    "parentID": {
                        "$ref": "definitions-JSON-Schema.json#/definitions/uri"
                    },
                    "childEPCs": {
                        "type": "array",
                        "items": {
                            "$ref": "definitions-JSON-Schema.json#/definitions/uri"
                        }
                    },
                    "childQuantityList": {
                        "type": "array",
                        "items": {
                            "$ref": "definitions-JSON-Schema.json#/definitions/quantityElement"
                        }
                    },
                    "action": {
                        "$ref": "definitions-JSON-Schema.json#/definitions/action"
                    },
                    "bizStep": {
                        "$ref": "definitions-JSON-Schema.json#/definitions/uri"
                    },
                    "disposition": {
                        "$ref": "definitions-JSON-Schema.json#/definitions/uri"
                    },
                    "persistentDisposition": {
                        "$ref": "definitions-JSON-Schema.json#/definitions/persistentDisposition"
                    },
                    "readPoint": {
                        "$ref": "definitions-JSON-Schema.json#/definitions/readPoint"
                    },
                    "bizLocation": {
                        "$ref": "definitions-JSON-Schema.json#/definitions/bizLocation"
                    },
                    "bizTransactionList": {
                        "type": "array",
                        "items": {
                            "$ref": "definitions-JSON-Schema.json#/definitions/bizTransaction"
                        }
                    },
                    "sourceList": {
                        "type": "array",
                        "items": {
                            "$ref": "definitions-JSON-Schema.json#/definitions/source"
                        }
                    },
                    "destinationList": {
                        "type": "array",
                        "items": {
                            "$ref": "definitions-JSON-Schema.json#/definitions/destination"
                        }
                    },
                    "sensorElementList": {
                        "type": "array",
                        "items": {
                            "$ref": "definitions-JSON-Schema.json#/definitions/sensorElement"
                        }
                    }
                },
                "required": ["isA", "action", "parentID"]
            },
            {
                "anyOf": [{
                        "type": "object",
                        "properties": {
                            "childEPCs": {
                                "type": "array",
                                "minItems": 1
                            }
                        },
                        "required": ["childEPCs"]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "childQuantityList": {
                                "type": "array",
                                "minItems": 1
                            }
                        },
                        "required": ["childQuantityList"]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "action": {
                                "type": "string",
                                "pattern": "^DELETE$"
                            }
                        }
                    }
                ]
            }
        ]
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/AssociationEvent"
        }
    ]
}
